{
    "$schema": "https://json.schemastore.org/prettierrc",
    "trailingComma": "es5",
    "semi": false,
    "tabWidth": 4,
    "useTabs": true,
    "singleQuote": true,
    "printWidth": 100,
    "singleAttributePerLine": true,
    "vueIndentScriptAndStyle": false,
    "arrowParens": "always",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "tailwindFunctions": [
        "clsx",
        "cn",
        "cva"
    ],
    "tailwindStylesheet": "resources/css/app.css",
    "htmlWhitespaceSensitivity": "ignore",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}